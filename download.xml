<project name="com.mbeddr.core download mps" default="download">
 
  <property name="MPS-Base-URL" value="http://download.jetbrains.com/mps/"/>
  <property name="MPS-File" value="MPS-117.9309.zip"/>
  <property name="MPS-Zip-Folder" value="MPS 2.5"/>
  <property name="MPS-Zip-Folder-CleandUp" value="MPS20"/>
  <property name="MPS-Dir" value="MPS"/>
  <property name="MPS-Patch-Dir" value="/root/MPS-Patch"/>
  
  <target name="download">
	<mkdir dir="${MPS-Dir}"/>
	<get src="${MPS-Base-URL}/${MPS-File}" dest="${MPS-Dir}" verbose="true" skipexisting="true" usetimestamp="true"/>
	<unzip src="${MPS-Dir}/${MPS-File}" dest="${MPS-Dir}"/>
	<move file="${MPS-Dir}/${MPS-Zip-Folder}" tofile="${MPS-Dir}/${MPS-Zip-Folder-CleandUp}"/>
	<copy todir="${MPS-Dir}/${MPS-Zip-Folder-CleandUp}" overwrite="true">
	    <fileset dir="${MPS-Patch-Dir}"/>
	  </copy>
  </target>
  
</project>
